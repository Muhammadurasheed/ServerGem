{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "react": ["./node_modules/react"],
      "react-dom": ["./node_modules/react-dom"],
      "zustand": ["./node_modules/zustand"],
      "@google/genai": ["./node_modules/@google/genai"]
    }
  },
  "include": ["src/**/*.ts", "webview/**/*.ts", "webview/**/*.tsx"],
  "exclude": ["node_modules", ".vscode-test"]
}
